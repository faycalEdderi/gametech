{% extends 'administrateur.html.twig' %}

{% block body %}


        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1 class="h3 title mb-2 text-gray-800">Mes messages</h1>
          

          <!-- DataTales Example -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">Base de donn√©e messages</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                
                  <thead>
                    <tr>
                      <th>Email</th>
                      <th>Objet</th>
                     
                      
                    </tr>
                  </thead>

                  <tfoot>
                    <tr>
                      <th>Email</th>
                      <th>Objet</th>
                     
                      
                    </tr>
                  </tfoot>

                  {% for msg in afficher %}
                  <tbody>
                    <tr>
                      <td><a href="mailto:{{ msg.email}}">{{msg.email }}</a></td>
                      <td>{{msg.objet | capitalize}}</td>
                      <td><a  class="btn btn-info issou"  href="{{ url('message.details', {id: msg.id}) }}"> Afficher le message </a> 

                     <td><a  class="btn btn-danger issou" data-toggle="modal" data-target="#exampleModal" href="{{ url('msg.delete', {id: msg.id}) }}"> Supprimer </a>

                  
                      
                    
                    </tr>
                    {% endfor %}
                    
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->
      
      {% include 'inc/modal.html.twig' %}
     {% endblock %}

     {# bloc javascripts #}
{% block javascripts %}
	<script src="{{ asset('js/confirmDeleteModal.js') }}"></script>
	<script src="{{ asset('js/deleteConfirmAlert.js') }}"></script>
{% endblock %}