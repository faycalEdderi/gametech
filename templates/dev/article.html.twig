{% extends 'administrateur.html.twig' %}

{% block title %} {{ parent() }} | Articles {% endblock %}

{% block body %}
<h1 class="h3 title mb-2 text-gray-800">Tous les articles</h1>
{% include 'inc/flash.messages.html.twig' %}
<div class="btnToggle">
<p>Cliquer sur un bouton pour faire apparaitre ou disparaitre les articles</p>
  <a id="togglePs4" href="#" class="btn btn-primary">Ps4</a>
  <a id="toggleXbox" href="#" class="btn btn-primary">Xbox</a>
  <a id="toggleSwitch" href="#" class="btn btn-primary">Switch</a>
  <a id="togglePc" href="#" class="btn btn-primary">PC</a>
</div>
<div class="col-lg-9 m-5">


  <div class="row d-flex justify-content-center">
    {% for article in afficher %}

          <div class="col-sm-6 {{article.categorie.name}}  col-md-4  col-xl-3 mb-4 ">
          <a href=" {{ url('article.details', { id : article.id}) }}">
            <div class="card h-100">
              <img class="card-img-top" src="{{ asset('img/' ~ article.image) }}" alt="">
              <div class="card-body">
                <h4 class="card-title">
                  {{  article.titre  | capitalize}} 
                </h4></a>
                
                <p class="card-text">{{article.accroche | capitalize}} </p>
              </div>
              <div class="card-footer">{{article.categorie.name | capitalize}}</div>

               <a href="{{ url('article.update', { id: article.id }) }}" class="btn btn-warning">
								Modifier
							</a>
            <a href="{{ url('article.delete', { id: article.id }) }}" class="btn issou btn-danger" data-toggle="modal" data-target="#exampleModal">
								Supprimer
							</a>
              
            </div>
          </div>
    {% endfor %}
  </div>
</div>
{% include 'inc/modal.html.twig' %}
{% endblock %}

{# bloc javascripts #}
{% block javascripts %}
	<script src="{{ asset('js/confirmDeleteModal.js') }}"></script>
  <script src="{{ asset('js/deleteConfirmAlert.js') }}"></script>
  <script src="{{ asset('js/btnToggle.js') }}"></script>
{% endblock %}
