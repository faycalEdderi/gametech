{% extends 'theme.html.twig' %}

{% block title %} Accueil{% endblock %}

{% block body %}


<div class="col-lg-9 m-5">


  <div class="row d-flex justify-content-center">
    {% for article in afficher %}

          <div class="col-sm-6  col-md-4 col-lg-3 col-xl-2 mb-4 ">
          <a href=" {{ url('article.details', { id : article.id}) }}">
            <div class="card h-100">
              <img class="card-img-top" src="{{ asset('img/' ~ article.image) }}" alt="">
              <div class="card-body">
                <h4 class="card-title">
                  {{  article.titre  | capitalize}} 
                </h4></a>
                
                <p class="card-text">{{article.accroche | capitalize}} </p>
              </div>

               <a href="{{ url('article.update', { id: article.id }) }}" class="btn btn-warning">
								Modifier
							</a>
            <a href="{{ url('article.delete', { id: article.id }) }}" class="btn issou btn-danger" data-toggle="modal" data-target="#exampleModal">
								Supprimer
							</a>
              
            </div>
          </div>
    {% endfor %}
  </div>
</div>
{% include 'inc/modal.html.twig' %}
{% endblock %}

{# bloc javascripts #}
{% block javascripts %}
	<script src="{{ asset('js/confirmDeleteModal.js') }}"></script>
	<script src="{{ asset('js/deleteConfirmAlert.js') }}"></script>
{% endblock %}
