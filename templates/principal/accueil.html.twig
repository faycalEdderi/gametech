{% extends 'theme.html.twig' %}

{% block title %} Accueil{% endblock %}
{% block stylesheets %}<link rel="stylesheet" href="{{ asset('css/stylePrincipal.css') }}">{% endblock %}
{% block body %}

{#debut de Caroussel#}
<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="{{asset('logo/ps4.png')}}" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{asset('logo/xbox.png')}}" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{asset('logo/switch.png')}}" alt="Third slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="{{asset('logo/pc.png')}}" alt="pc">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Précedent</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Suivant</span>
  </a>
</div>



{#Fin de Caroussel#}

<div>
  <div class="row d-flex justify-content-center">
    <div class="categorie">
    <img class="logo" src="{{asset('logo/ps4.png')}}" alt="playstation 4 ">
      <h3>Playstation 4 </h3>
      <p>Retrouver ici les dernieres actualité sur la Playstation 4 et les sorties excusives</p>
      <a class="button" href="#">Actu PS4 </a>
    </div>
      <div class="categorie">
      <img class="logo" src="{{asset('logo/xbox.png')}}" alt="xbox one">
      <h3>Xbox One </h3>
      <p>Retrouver ici les dernieres actualité sur la Xbox One et les sorties excusives</p>
      <a class="button" href="#">Actu Xbox One </a>
    </div>
      <div class="categorie">
      <img class="logo" src="{{asset('logo/switch.png')}}" alt="nintendo switch">
      <h3>Nintendo Switch </h3>
      <p>Retrouver ici les dernieres actualité sur la console de Nintendo et les sorties excusives</p>
      <a class="button" href="#">Actu Nintendo Switch </a>
    </div>
      <div class="categorie">
      <img class="logo" src="{{asset('logo/pc.png')}}" alt="ordinateur ">
      <h3>PC </h3>
      <p>Retrouver ici les dernieres actualité gaming sur ordinateur et les sorties excusive</p>
      <a class="button" href="#">Actu PC </a>
    </div>
  </div>
<h2 class="sousTitre">Derniers articles</h2>
  <div class="row parent d-flex justify-content-center">
  
    {% for article in afficher %}

    

          <div id="{{article.id}}" class="col-sm-6 articleCard  col-md-4 col-lg-3 col-xl-2 mb-4 ">
          <a href=" {{ url('article.details', { id : article.id}) }}">
            <div class="card h-100">
              <img class="card-img-top" src="{{ asset('img/' ~ article.image) }}" alt="">
              <div class="card-body">
                <h4 class="card-title">
                  {{  article.titre  | capitalize}} 
                </h4></a>
                
                <p class="card-text">{{article.accroche | capitalize}} </p>
              </div>
              <div class="card-footer">{{article.categorie.name | capitalize}}</div>
            </div>
          </div>
    {% endfor %}
  </div>
</div>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('js/affichageArticle.js') }}"></script>

{% endblock %}
    